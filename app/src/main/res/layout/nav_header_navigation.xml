<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigationWhite"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/navigation_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/thumbNail_small"
            android:layout_height="@dimen/thumbNail_small"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/mTvnameNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Anup Kumar"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_gravity="center_vertical"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="7"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/padding_20"
        android:background="@color/borderWhite"/>

    <LinearLayout
        android:id="@+id/lnrReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/V32dip"
        android:visibility="gone"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:src="@drawable/ic_file"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_text"
            android:layout_weight="3"
            android:textSize="@dimen/text_size_normal"
            android:text="Reports"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/V50dip"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_text"
            android:layout_weight="3"
            android:textSize="@dimen/text_size_normal"
            android:text="Setting"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/V50dip"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_power_button"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_text"
            android:layout_weight="3"
            android:textSize="@dimen/text_size_normal"
            android:text="Log out"/>

    </LinearLayout>

</LinearLayout>
