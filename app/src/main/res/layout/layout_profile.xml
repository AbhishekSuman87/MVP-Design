<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_pageBaclgroundGray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:id="@+id/nestScroll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_width="@dimen/thumbNail_large"
            android:layout_height="@dimen/thumbNail_large"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfile"
                android:layout_width="@dimen/thumbNail_large"
                android:layout_height="@dimen/thumbNail_large"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avtar" />

            <ImageView
                android:id="@+id/ivEditProfileImg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/V5dip"
                android:background="@drawable/border_fill_orange"
                android:src="@drawable/ic_edit_white" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlProfile"
            android:layout_marginBottom="@dimen/padding_15"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_30"
            app:cardElevation="@dimen/cardElvation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details"
                        android:textColor="@color/dark_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="First Name *" />

                    <EditText
                        android:id="@+id/edtFname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Middle Name" />

                    <EditText
                        android:id="@+id/edtMname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Last Name*" />

                    <EditText
                        android:id="@+id/edtLname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10"
                        android:text="" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Education*" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_blackborder_white">

                    <Spinner
                        android:id="@+id/spnrEducation"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/date_dark"
                        android:layout_height="45dp"></Spinner>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textViewExprnce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Practicing Since*" />

                    <TextView
                        android:id="@+id/edtExperience"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="phone"
                        android:padding="@dimen/padding_10"
                        android:text="" />
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Birth Date*" />

                    <TextView
                        android:id="@+id/tvBdate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Gender*" />

                    <RadioGroup
                        android:id="@+id/rgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Female" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mLinearLayoutAdress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/textViewadd1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Address Line 1*" />

                    <EditText
                        android:id="@+id/edtAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewAdd2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Address Line 2*" />

                    <EditText
                        android:id="@+id/edtAddress2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewpin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Pincode*" />

                    <EditText
                        android:id="@+id/edtPincode"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="Country*" />

                    <EditText
                        android:id="@+id/AutoCountry"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="State*" />

                    <EditText
                        android:id="@+id/AutoState"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewDist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="District*" />

                    <EditText
                        android:id="@+id/AutoDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20"
                        android:text="City*" />

                    <EditText
                        android:id="@+id/AutoCity"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_edit_blackborder_white"
                        android:ems="10"
                        android:padding="@dimen/padding_10"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dots_height"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:layout_marginTop="@dimen/V40dip"
                    android:background="@drawable/border_fill_orange"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
